<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/latar1"
    tools:context="com.example.windows10.bokingfutsal.RegisterActivity">

    <EditText
        android:id="@+id/emaildaftar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/passdaftar"
        android:layout_alignLeft="@+id/passdaftar"
        android:layout_alignStart="@+id/passdaftar"
        android:layout_marginBottom="10dp" />

    <EditText
        android:id="@+id/passdaftar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:ems="10"
        android:layout_marginBottom="20dp"
        android:hint="Enter Your Password"
        android:inputType="textPassword" />


    <Button
        android:id="@+id/btn_daftar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="@+id/passdaftar"
        android:layout_alignParentLeft="@+id/passdaftar"
        android:layout_below="@+id/passdaftar"
        android:layout_centerHorizontal="true"
        android:text="DAFTAR"
        />

    <TextView
        android:id="@+id/textmasuk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_daftar"
        android:text="Sudah Punya Akun? Masuk Disini"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/emaildaftar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="DAFTAR"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>
